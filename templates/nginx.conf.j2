# For more information on configuration, see:
#   * Official English Documentation: http://nginx.org/en/docs/
#   * Official Russian Documentation: http://nginx.org/ru/docs/

user nginx;
worker_processes 16;
error_log /var/log/nginx/error.log;
pid /var/run/nginx.pid;

# Load dynamic modules. See /usr/share/doc/nginx/README.dynamic.
include /usr/share/nginx/modules/*.conf;

events {
    use epoll;
    worker_connections 1024;
    multi_accept on;
}

http {

        open_file_cache max=1000 inactive=20s;
        open_file_cache_valid 30s;
        open_file_cache_min_uses 5;
        open_file_cache_errors off;

        log_format compression '$remote_addr - $remote_user [$time_local] '
                               '"$request" $status $body_bytes_sent '
                               '"$http_referer" "$http_user_agent" "$gzip_ratio"';

upstream app {
        least_conn;
        server {{ elb }}:8200 max_fails=3  fail_timeout=3s;
        keepalive 128;
        }

server {
        listen 80;
        listen 443 ssl http2;
        listen 8225 ssl http2;
        listen 8590 ssl http2;
        proxy_buffering on;
        proxy_buffer_size 8k;
        proxy_buffers 2048 8k;
        proxy_http_version 1.1;
        proxy_set_header 'Connection' '';
        proxy_connect_timeout 1800;
        proxy_send_timeout 1800;
        proxy_read_timeout 1800;
        proxy_ignore_client_abort on;
        send_timeout 1800;
        keepalive_timeout 6500;
        gzip on;
        gzip_proxied any;
        gzip_types text/plain application/javascript application/x-javascript text/javascript text/xml text/css;
        ssl_certificate /etc/nginx/ssl-bundle.crt;
        ssl_certificate_key /etc/nginx/site.key;
        ssl_stapling on;
        ssl_stapling_verify on;
        ssl_session_timeout  5m;
        ssl_protocols TLSv1.2 TLSv1.1;
        ssl_prefer_server_ciphers on;
        ssl_ciphers EECDH+ECDSA+AESGCM:EECDH+aRSA+AESGCM:EECDH+ECDSA+SHA512:EECDH+ECDSA+SHA384:EECDH+ECDSA+SHA256:ECDH+AESGCM:ECDH+AES256:DH+AESGCM:DH+AES256:RSA+AESGCM:!aNULL:!eNULL:!LOW:!RC4:!3DES:!MD5:!EXP:!PSK:!SRP:!DSS;
        ssl_session_cache shared:TLS:2m;
        error_log /var/log/nginx/nginx-error.log {{ level }};
        access_log /var/log/nginx/nginx-server.log compression;
        sendfile on;
        tcp_nopush on;
        tcp_nodelay on;
        reset_timedout_connection on;
        client_body_timeout 1800;
        resolver {{ dns }};

        location / {
                rewrite ^ https://{{ url }}/app/index.html#/login redirect;
        }

        location /app {
                proxy_pass http://app;
                access_log /var/log/nginx/app.log;
        }

        location /nginx_status {
                stub_status on;
                access_log off;
                allow 127.0.0.1;
                deny all;
            }
        }
}
